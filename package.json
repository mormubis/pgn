{
  "author": "Adrian de la Rosa <adrian@delarosab.me>",
  "dependencies": {
    "nearley": "^2.20.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/preset-env": "^7.16.5",
    "@rollup/plugin-commonjs": "^21.0.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-standard": "^5.0.0",
    "gitmoji-cli": "^4.7.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "rollup": "^2.62.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-visualizer": "^5.5.2"
  },
  "license": "MIT",
  "main": "index.js",
  "name": "@echecs/pgn",
  "repository": "mormubis/pgn",
  "scripts": {
    "build": "npm run grammar:compile && rollup -c",
    "build:ci": "npm run build",
    "coverage": "jest --coverage --no-cache --silent",
    "coverage:ci": "npm run coverage",
    "format": "npm run format:ci -- --write",
    "format:ci": "prettier --ignore-path .gitignore -l \"**/*.+(js|json|md|yml)\"",
    "grammar:compile": "nearleyc src/grammar.ne -o src/grammar.js",
    "grammar:test": "nearley-test -s GAME src/grammar.js < ./test.pgn",
    "lint": "eslint \"**/*.js\" --fix",
    "lint:ci": "npm run lint",
    "prepare": "npm run grammar:compile && npm run build:ci",
    "start": "rollup -c -w",
    "test": "jest",
    "test:ci": "npm test -- --silent",
    "test:watch": "npm run test -- --watch"
  },
  "version": "1.0.0"
}
