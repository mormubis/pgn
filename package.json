{
  "author": "Adrian de la Rosa <adrian@delarosab.me>",
  "dependencies": {
    "nearley": "^2.20.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-export-namespace-from": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@types/nearley": "^2.11.2",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "cz-emoji": "^1.3.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "rollup": "^2.68.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-visualizer": "^5.6.0"
  },
  "license": "MIT",
  "main": "index.js",
  "name": "@echecs/pgn",
  "repository": "mormubis/pgn",
  "scripts": {
    "build": "npm run grammar:compile && rollup -c",
    "build:ci": "npm run build",
    "coverage": "jest --coverage --no-cache --silent",
    "coverage:ci": "npm run coverage",
    "format": "npm run format:ci -- --write",
    "format:ci": "prettier --ignore-path .gitignore -l \"**/*.+(js|json|md|yml)\"",
    "grammar:compile": "nearleyc src/grammar.ne -o src/grammar.js",
    "grammar:test": "nearley-test -s DATABASE src/grammar.js < ./test.pgn",
    "grammar:watch": "fswatch src/grammar.ne | ",
    "lint": "eslint \"**/*.js\" --fix",
    "lint:ci": "npm run lint",
    "prepare": "npm run grammar:compile && npm run build:ci",
    "start": "rollup -c -w",
    "test": "jest",
    "test:ci": "npm test -- --silent",
    "test:watch": "npm run test -- --watch"
  },
  "version": "1.0.0"
}
